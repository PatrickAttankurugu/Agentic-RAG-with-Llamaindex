# Agentic RAG v2.0 - Environment Configuration

# ===================
# API Keys (Required)
# ===================
GOOGLE_API_KEY=your_google_api_key_here

# Optional: Other LLM providers
# OPENAI_API_KEY=your_openai_key_here
# COHERE_API_KEY=your_cohere_key_here

# ===================
# Application
# ===================
APP_NAME=Agentic RAG
APP_VERSION=2.0.0
ENVIRONMENT=development  # development, staging, production
DEBUG=false

# ===================
# LLM Configuration
# ===================
LLM_PROVIDER=gemini
LLM_MODEL_NAME=models/gemini-2.0-flash-exp
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=
LLM_TIMEOUT=60
LLM_MAX_RETRIES=3

# ===================
# Embedding Configuration
# ===================
EMBEDDING_PROVIDER=huggingface
EMBEDDING_MODEL_NAME=BAAI/bge-small-en-v1.5
EMBEDDING_BATCH_SIZE=32
EMBEDDING_MAX_LENGTH=512

# ===================
# Vector Store
# ===================
VECTORSTORE_TYPE=chroma  # chroma, faiss, memory
VECTORSTORE_PERSIST_DIRECTORY=./data/vector_store
VECTORSTORE_COLLECTION_NAME=documents
VECTORSTORE_DISTANCE_METRIC=cosine

# ===================
# Document Chunking
# ===================
CHUNKING_CHUNK_SIZE=1024
CHUNKING_CHUNK_OVERLAP=200

# ===================
# Retrieval
# ===================
RETRIEVAL_SIMILARITY_TOP_K=3
RETRIEVAL_RERANK=false
RETRIEVAL_RERANK_TOP_N=10
RETRIEVAL_USE_HYDE=false

# ===================
# Agent Configuration
# ===================
AGENT_MODE=advanced  # simple, advanced
AGENT_MAX_ITERATIONS=10
AGENT_VERBOSE=true

# ===================
# Caching
# ===================
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ===================
# Logging
# ===================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json, text
LOG_OUTPUT_FILE=./logs/app.log
LOG_ROTATION=500 MB
LOG_RETENTION=10 days

# ===================
# Security
# ===================
SECURITY_RATE_LIMIT_ENABLED=true
SECURITY_RATE_LIMIT_REQUESTS=100
SECURITY_RATE_LIMIT_PERIOD=60
SECURITY_INPUT_VALIDATION=true
SECURITY_MAX_INPUT_LENGTH=10000

# ===================
# Monitoring
# ===================
MONITORING_ENABLED=true
MONITORING_TRACING_ENABLED=true
MONITORING_METRICS_ENABLED=true
MONITORING_EXPORT_PROMETHEUS=false
MONITORING_PROMETHEUS_PORT=9090

# ===================
# Directories
# ===================
DATA_DIR=./data
DOCS_DIR=.
CACHE_DIR=./data/cache
LOGS_DIR=./logs
